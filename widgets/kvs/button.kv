<FlatBorderButton>
    background_normal: '' 
    background_down: ''
    background_color: utils.get_color_from_hex('#FFFFFF') if self.state=='normal' else utils.get_color_from_hex('#2638C4')
    color: utils.get_color_from_hex("#2638C4") if self.state=='normal' else utils.get_color_from_hex('#FFFFFF')
    font_size: sp(14)
    size_hint: (None,None)
    width: self.texture_size[0] + sp(20)
    height: self.texture_size[1] + sp(20)
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex("#2638C4")
        Line:
            width: 1.5
            rectangle: self.x, self.y, self.width, self.height

<FlatButton>
